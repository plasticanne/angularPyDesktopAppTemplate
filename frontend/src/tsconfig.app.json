{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "importHelpers": true,
      "outDir": "./dist/out-tsc",
      "baseUrl": "./",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es5",
      "mapRoot": "./",
      "module": "es2015",
      "types": [],
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ]

    },
      "exclude": [
          "test.ts",
          "**/*.spec.ts",
          "**/_*.ts"
        ],

  }

